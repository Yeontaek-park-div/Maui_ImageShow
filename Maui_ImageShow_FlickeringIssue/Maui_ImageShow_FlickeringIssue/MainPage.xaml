<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui_ImageShow_FlickeringIssue.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Button Text="Change Image Once" Clicked="Bnt_ChangeOnce" HorizontalOptions="Fill"/>
            <Button Text="Change Image start" Clicked="Bnt_ChangeStart" HorizontalOptions="Fill"/>
            
            <AbsoluteLayout Grid.Row="0">
                <AbsoluteLayout x:Name="Canvas1">
                    <Image x:Name="Image1"/>
                </AbsoluteLayout>

                <AbsoluteLayout x:Name="Canvas2">
                    <Image x:Name="Image2"/>
                </AbsoluteLayout>
            </AbsoluteLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
